<%= form_with model: @post, url: user_posts_path do |form| %>
  <div>
    <%= form.label :title %>
    <%= form.text_field :title, placeholder: 'Title of post' %>
  </div>
  <br>
  <div>
    <%= form.label :text %>
    <%= form.text_area :text, placeholder: 'Description of post' %>
  </div>
  <br>
  <%= form.submit %>
<% end %>